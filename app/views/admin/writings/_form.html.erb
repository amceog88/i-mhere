<div class="writing_form">
  <div class="col-md-10">
    <%= form_for [:admin, @writing] do |f| %>
      <% if @writing.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

          <ul>
          <% @writing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label '標題' %><br>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label '作者' %><br>
        <%= f.text_field :writer, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label '內容' %><br>
        <%= f.cktext_area :description, :class => "form-control" , :ckeditor => {:toolbar => 'mini'}%>
      </div>
      <div class="form-group">
        <%= f.label '文章圖片' %><br>
        <%= f.file_field :image %>
      </div>
      <div class="actions">
        <%= f.submit 'submit', :class => "btn btn-primary btn-full" %>
      </div>
    <% end %>
  </div>
</div>