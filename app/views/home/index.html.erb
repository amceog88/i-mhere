  <section class="posts">
    <% @writings.each do |writing| %>
      <article>
        <header>
          <span class="date"><%= time_ago_in_words(writing.created_at) %> ago</span>
          <h2><a href="#"><%= link_to writing.title , writing_path(writing) %></h2>
        </header>
        <%= link_to writing_path(writing) do %>
          <div class="image fit home_index">
            <% if writing.image.attached? %>
              <%= image_tag(writing.image) %>
              <% else %>
              <img src="<%= asset_path 'pic02.jpg' %>" alt="" />
            <% end %>
          </div>
        <% end %>
        <p><%= simple_format(writing.description.truncate(100)) %></p>
        <ul class="actions">
          <li><%= link_to "Full Story" , writing_path(writing) , class: "button" %></li>
        </ul>
      </article>
    <% end %>
    <% if @writings.count % 2 != 0 %>
      <article>
      </article>
    <% end %>
